@import "../template/score"
@import "../template/row-list"

.movie .poster {
	width: 100%;
	height: 360rpx;
	position: relative;
}
.movie .poster .mark {
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,.75);

}
.poster-con-wrap { display: flex; position: absolute; top: 100rpx; padding: 0 32rpx;}
.poster-con-wrap .img-wrap { flex: 0 0 200rpx; width: 200rpx; height: 280rpx; overflow: hidden;}
.poster-con-wrap .img-wrap image { width: 100%; }
.poster-con-wrap .text { flex:1 1 1; padding-left: 24rpx;}
.poster-con-wrap .text > text:first-child { font-size: 36rpx; color: #fff; padding-top: 48rpx;}
.poster-con-wrap .text .content { display: flex; align-items: center; }
.poster-con-wrap .text .post-score { font-size: 78rpx; font-weight: 200; color: #fff; }
.poster-con-wrap .text .con-right { flex:  1 1 1; padding-left: 12rpx; }
.poster-con-wrap .con-right text { font-size: 26rpx; color: rgba(255,255,255,.6); }

.movie > .info {
	font-size: 28rpx;
	color: #666;
	line-height: 1.8;
	padding: 0 32rpx;
}
.movie .info text:last-child text {
	display: inline-block;
	padding-right: 8rpx;
}
.movie > .title { font-size: 28rpx; color: #ccc; line-height: 96rpx; padding: 0 32rpx; }
.movie .main {
	display: block;
	font-size: 24rpx;
	color: #666;
	line-height: 1.5;
	padding: 0 32rpx 32rpx;
	text-indent: 2em;
}
.small-comment-wrap {  padding: 0 32rpx; }
.small-comment-wrap .comment-list { overflow: hidden; }
.small-comment-wrap .more { font-size: 28rpx; color: #40586d; padding: 30rpx 0; text-align: center; }
.small-comment-wrap .item { display: flex; padding-bottom: 32rpx; }
.small-comment-wrap .item:last-of-type { padding-bottom: 0; }
.small-comment-wrap .img { flex: 0 0 76rpx; height: 76rpx; border-radius: 38rpx; overflow: hidden; margin-right: 24rpx; }
.small-comment-wrap .img image { width: 100%; height: 100%; }
.small-comment-wrap .info { flex:1 1 1; width: 100%; }
.small-comment-wrap .info .name-group { display: flex; align-items: center; }
.small-comment-wrap .name-group .star-wrap { padding-left: 20rpx; }
.small-comment-wrap .info .title { font-size: 36rpx; padding: 8rpx 0; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
.small-comment-wrap .info > view { line-height: 1.5; }
.small-comment-wrap .info > view > text { color: #333; }
.small-comment-wrap .info > text:first-of-type { line-height: 1.8; color: #ccc; font-size: 24rpx; }
.small-comment-wrap .info > text:last-of-type { color: #666; }
.ellipsis { display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp:3; overflow: hidden; height: 108rpx; }


.list-wrap {
	width:100%;
	box-sizing: border-box;
	padding: 0 32rpx;

}