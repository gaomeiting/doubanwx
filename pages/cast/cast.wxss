.post-wrap { width: 100%; height: 360rpx; overflow: hidden; position: relative; }

.post-wrap .mark { width: 100%; height: 100%; background: rgba(0,0,0,.75); }
.post { width: 100%; position: absolute; top: 0; left: 0; padding: 10rpx 32rpx 0; box-sizing: border-box;}
.post-wrap .icon-wrap { display: flex; align-items: center; padding: 8rpx 16rpx; }
.post-wrap .icon-wrap text { font-size: 32rpx; color: #fff; padding-left: 12rpx; }
.post-wrap .icon-wrap image { width: 40rpx; height: 40rpx; }
.post-wrap .head-img { width: 140rpx; height: 140rpx; border-radius: 140rpx; overflow: hidden; margin: -36rpx auto 0; }
.post-wrap .head-img image { width: 140rpx; height: 140rpx; }
.post-wrap .name { font-size: 28rpx; color: #fff; line-height: 1.8; text-align: center; padding-top: 20rpx; }
.post-wrap .name text {  }
.post-wrap .name text:first-child { font-size: 32rpx; line-height: 1.5; margin-bottom: 8rpx; border: 1rpx solid #fff; display: inline-block; border-radius: 0.8em; padding: 0 20rpx;  }