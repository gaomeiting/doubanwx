/**index.wxss**/
page {
	width: 100%;
	height: 100%;
	position: relative;
}

swiper, .item-image {
	width: 100%;
	height: 100%;
}
.loading-wrap {
	position: absolute;
	top:50%;
	left: 50%;
	transform: translate3d(-50%, -50%, 0);
}
button {
	width: 300rpx;
	height: 80rpx;
	background: #88a2cf;
	font-size: 28rpx;
	color: rgba(255, 255, 255, 0.8);
	line-height: 80rpx;
	text-align: center;
	position: absolute;
	bottom: 40px;
	left: 50%;
	transform: translate3d(-50%, 0, 0);

}